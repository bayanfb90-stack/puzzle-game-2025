<h1>نكمّل الصورة معًا</h1>
<p>الصورة ما تكتمل بدونك</p>

<div id="grid"></div>

<script>
const grid = document.getElementById("grid");
const totalPieces = 300;

const content = [
  "الشفافية","التميّز","الالتزام","الأمل","المصداقية",
  "الثقة","التخصصية","التمكين","تعزيز الشراكات",
  "نشر الوعي بالإعاقة","تمكين الأسر","تدريب الكوادر",
  "دعم البحوث","الإدماج المجتمعي","رفع جودة الخدمات",
  "رؤيتنا: الريادة في رعاية وتأهيل ذوي الإعاقة",
  "رسالتنا: تعزيز جودة الحياة وتحقيق الاستقلالية"
];

for(let i=0;i<totalPieces;i++){
  const piece = document.createElement("div");
  piece.className = "piece";
  piece.innerText = "＋";

  piece.onclick = ()=>{
    if(!piece.classList.contains("done")){
      const info = content[Math.floor(Math.random()*content.length)];
      alert(info);

      const name = prompt("اكتب اسمك:");
      if(name){
        piece.classList.add("done");
        piece.innerText = name;
      }
    }
  };

  grid.appendChild(piece);
}
</script>

